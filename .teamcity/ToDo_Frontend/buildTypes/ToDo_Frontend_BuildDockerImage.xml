<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="34fd68c7-4712-44c3-8c26-9bd909d23f8f" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/10.0/project-config.xsd">
  <name>Docker Image</name>
  <description />
  <settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_4" name="Download Dependencies" type="simpleRunner">
        <parameters>
          <param name="plugin.docker.imageId" value="node:6.9.1" />
          <param name="script.content"><![CDATA[npm install
./node_modules/.bin/bower --allow-root install]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_5" name="" type="Docker Build">
        <parameters>
          <param name="docker.image.namesAndTags" value="mkuzmin/todo-frontend:%build.number%" />
          <param name="dockerfile.path" value="Dockerfile" />
          <param name="dockerfile.source" value="PATH" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_6" name="Docker Push" type="simpleRunner">
        <parameters>
          <param name="script.content" value="docker push mkuzmin/todo-frontend:%build.number%" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="ToDo_Todo">
        <checkout-rule rule="+:frontend =&gt; ." />
      </vcs-entry-ref>
    </vcs-settings>
    <requirements />
    <build-triggers />
    <build-extensions>
      <extension id="DockerSupport" type="DockerSupport">
        <parameters>
          <param name="cleanupPushed" value="true" />
          <param name="login2registry" value="PROJECT_EXT_2" />
          <param name="loginCheckbox" value="on" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

